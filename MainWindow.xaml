						<Button Content="Edit Record" />
						<Separator Width="20" Background="SeaShell"></Separator>
						<Button Content="Delete Record" />
						<Separator Width="20" Background="SeaShell"></Separator>
						<TextBox  HorizontalAlignment="Left" TextWrapping="Wrap" Text="Title" VerticalAlignment="Top"/>
						<Separator Width="20" Background="SeaShell"></Separator>
						<TextBox  HorizontalAlignment="Left" TextWrapping="Wrap" Text="Year" VerticalAlignment="Top"/>
						<Separator Width="20" Background="SeaShell"></Separator>
						<TextBox  HorizontalAlignment="Left" TextWrapping="Wrap" Text="Duration" VerticalAlignment="Top"/>
						<Separator Width="20" Background="SeaShell"></Separator>
						<TextBox  HorizontalAlignment="Left" TextWrapping="Wrap" Text="Age" VerticalAlignment="Top"/>
						<Separator Width="20" Background="SeaShell"></Separator>
						<TextBox  HorizontalAlignment="Left" TextWrapping="Wrap" Text="Price" VerticalAlignment="Top"/>
					</ToolBar>
					<DataGrid d:ItemsSource="{d:SampleData ItemCount=10}" MaxColumnWidth="300" AlternatingRowBackground="SeaShell" AlternationCount="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="35"/>
