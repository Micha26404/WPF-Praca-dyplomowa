									<TextBox.Background>
										<RadialGradientBrush SpreadMethod="Reflect">
											<GradientStop Color="#00670000" Offset="1"/>
											<GradientStop Color="#FF6F0000" Offset="1"/>
											<GradientStop Color="#FF821515" Offset="1"/>
											<GradientStop Color="Black" Offset="1"/>
											<GradientStop Color="#FF730000" Offset="0"/>
										</RadialGradientBrush>
									</TextBox.Background>
								</TextBox>
							</UniformGrid>
						</UniformGrid>

						<DataGrid Name="MoviesCatalog" Grid.Row="1" ItemsSource="{Binding}" FontSize="16" Panel.ZIndex="1" HeadersVisibility="Column" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" AlternationCount="2" BorderBrush="{x:Null}" Background="Transparent" HorizontalGridLinesBrush="#FF460000" VerticalGridLinesBrush="#FF420000" Grid.ColumnSpan="2">
							<DataGrid.AlternatingRowBackground>
								<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
									<GradientStop Color="#00000000" Offset="0.423"/>
									<GradientStop Color="#FF3E0000" Offset="1"/>
									<GradientStop Color="#B2310000" Offset="0"/>
								</LinearGradientBrush>
							</DataGrid.AlternatingRowBackground>
							<DataGrid.RowBackground>
								<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
									<GradientStop Color="#00000000" Offset="0.423"/>
									<GradientStop Color="#FF3E0000" Offset="1"/>
									<GradientStop Color="#B2310000" Offset="0"/>
								</LinearGradientBrush>
							</DataGrid.RowBackground>
							<DataGrid.Resources>
								<Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
									<Setter Property="Background" Value="#4C730000" />
