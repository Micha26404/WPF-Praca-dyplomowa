						</UniformGrid>
					</TabItem.Header>
					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition Height="auto"/>
							<RowDefinition/>
						</Grid.RowDefinitions>

						<UniformGrid Name="OrdersFilters" Rows="1" Height="100" ToolTip="Filter panel" VerticalAlignment="Top">
							<UniformGrid Columns="1">
								<TextBlock MouseDown="FilterOrderMovie">Movie</TextBlock>
								<TextBox Name="FilterOMovie">
									<TextBox.Background>
										<RadialGradientBrush SpreadMethod="Reflect">
											<GradientStop Color="#00670000" Offset="1"/>
											<GradientStop Color="#FF6F0000" Offset="1"/>
											<GradientStop Color="#FF821515" Offset="1"/>
											<GradientStop Color="Black" Offset="1"/>
											<GradientStop Color="#FF730000" Offset="0"/>
