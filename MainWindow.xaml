<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
		Loaded="Window_Loaded"
	    BorderThickness="0,0,1,2"
		Padding="6"
		ResizeMode="CanResizeWithGrip"
		Title="Rent-A-Movie" Width="1920" Height="1080" >
	<Window.Background>
		<RadialGradientBrush SpreadMethod="Reflect">
			<GradientStop Color="Black" Offset="1"/>
			<GradientStop Color="#FF730000" Offset="0.862"/>
			<GradientStop Color="Black"/>
			<GradientStop Color="Black" Offset="0.116"/>
			<GradientStop Color="#FF821515"/>
			<GradientStop Color="#FF6F0000"/>
			<GradientStop Color="Black" Offset="0.461"/>
			<GradientStop Color="Black"/>
			<GradientStop Color="#FF290505" Offset="0.264"/>
			<GradientStop Color="#FF730000" Offset="0.249"/>
			<GradientStop Color="#FF6B0000" Offset="0.323"/>
			<GradientStop Color="#FF730000" Offset="0.727"/>
			<GradientStop Color="#FF730000" Offset="0.443"/>
			<GradientStop Color="#FF1F0505" Offset="0.574"/>
			<GradientStop Color="#FF730000" Offset="0.565"/>
			<GradientStop Color="#FF370707" Offset="0.738"/>
			<GradientStop Color="Black" Offset="0.186"/>
			<GradientStop Color="Black" Offset="0.878"/>
			<GradientStop Color="#FF730000" Offset="0.103"/>
			<GradientStop Color="#FF730000" Offset="0.175"/>
			<GradientStop Color="Black" Offset="0.336"/>
			<GradientStop Color="#FF730000" Offset="0.937"/>
		</RadialGradientBrush>
	</Window.Background>
	<Window.Resources>
		<Style TargetType="{x:Type Control}" x:Key="controlStyle">
			<Setter Property="FontSize" Value="16" />
		</Style>
		<Style TargetType="{x:Type Button}" BasedOn="{StaticResource controlStyle}">
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="OverridesDefaultStyle" Value="false"/>
			<Setter Property="MinWidth" Value="64"/>
			<Setter Property="MinHeight" Value="64"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type Button}">
						<Border Name="Border" CornerRadius="35" BorderThickness="1,1,1,1"
                            BorderBrush="black" Opacity="1">
							<Border.Background>
								<RadialGradientBrush SpreadMethod="Reflect">
									<GradientStop Color="Black"/>
									<GradientStop Color="#FF821515"/>
									<GradientStop Color="#FF6F0000"/>
									<GradientStop Color="Black"/>
									<GradientStop Color="#FF900000" Offset="0.627"/>
									<GradientStop Color="Black" Offset="0.644"/>
									<GradientStop Color="#FFA00000" Offset="0.983"/>
									<GradientStop Color="#FE000000" Offset="1"/>
								</RadialGradientBrush>
							</Border.Background>
							<Border.Effect>
								<DropShadowEffect Direction="270" ShadowDepth="7" Color="Black"/>
							</Border.Effect>
							<ContentPresenter/>

						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="true">
								<Setter TargetName="Border" 
                                    Property="Background" Value="white"/>
							</Trigger>
							<Trigger Property="IsPressed" Value="true">
								<Setter TargetName="Border" 
                                    Property="Background" Value="lightgreen" />
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
		<Style TargetType="{x:Type Label}" BasedOn="{StaticResource controlStyle}"></Style>
		<Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource controlStyle}"></Style>
		<Style TargetType="{x:Type ListView}" BasedOn="{StaticResource controlStyle}"></Style>
		<Style TargetType="{x:Type ToolBar}" BasedOn="{StaticResource controlStyle}"></Style>
		<Style TargetType="{x:Type StatusBar}" BasedOn="{StaticResource controlStyle}"></Style>
		<Style TargetType="{x:Type ScrollViewer}" BasedOn="{StaticResource controlStyle}"></Style>
	</Window.Resources>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="8*" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<UniformGrid Columns="1">
			<UniformGrid.Background>
				<RadialGradientBrush SpreadMethod="Reflect" Opacity="0.8">
					<GradientStop Color="Black" Offset="1"/>
					<GradientStop Color="#FF730000" Offset="0.862"/>
					<GradientStop Color="Black"/>
					<GradientStop Color="Black" Offset="0.116"/>
					<GradientStop Color="#FF821515"/>
					<GradientStop Color="#FF6F0000"/>
					<GradientStop Color="Black" Offset="0.461"/>
					<GradientStop Color="Black"/>
					<GradientStop Color="#FF290505" Offset="0.264"/>
					<GradientStop Color="#FF730000" Offset="0.249"/>
					<GradientStop Color="#FF6B0000" Offset="0.323"/>
					<GradientStop Color="#FF730000" Offset="0.727"/>
					<GradientStop Color="#FF730000" Offset="0.443"/>
					<GradientStop Color="#FF1F0505" Offset="0.574"/>
					<GradientStop Color="#FF730000" Offset="0.565"/>
					<GradientStop Color="#FF370707" Offset="0.738"/>
					<GradientStop Color="Black" Offset="0.186"/>
					<GradientStop Color="Black" Offset="0.878"/>
					<GradientStop Color="#FF730000" Offset="0.103"/>
					<GradientStop Color="#FF730000" Offset="0.175"/>
					<GradientStop Color="Black" Offset="0.336"/>
					<GradientStop Color="#FF730000" Offset="0.937"/>
				</RadialGradientBrush>
			</UniformGrid.Background>

			<Viewbox  VerticalAlignment="Top">
			<Button x:Name="Movies" ToolTipService.ToolTip="Browse movies" MaxHeight="64">
				<Button.Foreground>
					<ImageBrush Stretch="Uniform" ImageSource="/icons/icons8-movies-folder-64.png"/>
				</Button.Foreground>
			</Button>
			</Viewbox>

			<Viewbox VerticalAlignment="Center">
				<Button x:Name="Rents" ToolTipService.ToolTip="Browse rents" MaxHeight="64">
					<Button.Foreground>
						<ImageBrush Stretch="Uniform" ImageSource="icons/icons8-combi-ticket-64.png"/>
					</Button.Foreground>
				</Button>
			</Viewbox>

			<Viewbox VerticalAlignment="Bottom">
				<Button x:Name="Clients" ToolTipService.ToolTip="Browse clients" MaxHeight="64">
					<Button.Foreground>
						<ImageBrush Stretch="Uniform" ImageSource="icons/Planet People.png"/>
					</Button.Foreground>
				</Button>
			</Viewbox>
		</UniformGrid>

		<DataGrid Name="dTable" Grid.Column="1" d:ItemsSource="{Binding}" FontSize="16" HeadersVisibility="Column" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" AlternationCount="2" BorderBrush="#FF868686" Background="{x:Null}"/>

		<UniformGrid Grid.Column="2" MinWidth="30" Columns="1">
			<UniformGrid.Background>
				<RadialGradientBrush SpreadMethod="Reflect" Opacity="0.8">
					<GradientStop Color="Black" Offset="1"/>
					<GradientStop Color="#FF730000" Offset="0.862"/>
					<GradientStop Color="Black"/>
					<GradientStop Color="Black" Offset="0.116"/>
					<GradientStop Color="#FF821515"/>
					<GradientStop Color="#FF6F0000"/>
					<GradientStop Color="Black" Offset="0.461"/>
					<GradientStop Color="Black"/>
					<GradientStop Color="#FF290505" Offset="0.264"/>
					<GradientStop Color="#FF730000" Offset="0.249"/>
					<GradientStop Color="#FF6B0000" Offset="0.323"/>
					<GradientStop Color="#FF730000" Offset="0.727"/>
					<GradientStop Color="#FF730000" Offset="0.443"/>
					<GradientStop Color="#FF1F0505" Offset="0.574"/>
					<GradientStop Color="#FF730000" Offset="0.565"/>
					<GradientStop Color="#FF370707" Offset="0.738"/>
					<GradientStop Color="Black" Offset="0.186"/>
					<GradientStop Color="Black" Offset="0.878"/>
					<GradientStop Color="#FF730000" Offset="0.103"/>
					<GradientStop Color="#FF730000" Offset="0.175"/>
					<GradientStop Color="Black" Offset="0.336"/>
					<GradientStop Color="#FF730000" Offset="0.937"/>
				</RadialGradientBrush>
			</UniformGrid.Background>

			<Viewbox  VerticalAlignment="Top">
				<Button x:Name="Trailer" ToolTipService.ToolTip="Watch a trailer for this movie">
					<Button.Foreground>
						<ImageBrush ImageSource="icons/icons8-movie-projector-64.png" Stretch="Uniform"/>
					</Button.Foreground>
				</Button>
			</Viewbox>

			<Viewbox VerticalAlignment="Top">
				<Button x:Name="Rent" ToolTipService.ToolTip="Rent a copy of this movie">
					<Button.Foreground>
						<ImageBrush ImageSource="icons/icons8-movie-ticket-64.png" Stretch="Uniform"/>
					</Button.Foreground>
				</Button>
			</Viewbox>

			<Viewbox VerticalAlignment="Top">
				<Button x:Name="Return" ToolTipService.ToolTip="Return a copy of this movie">
					<Button.Foreground>
						<ImageBrush ImageSource="icons/icons8-return-64.png" Stretch="Uniform"/>
					</Button.Foreground>
				</Button>
			</Viewbox>

			<Viewbox VerticalAlignment="Bottom">
				<Button x:Name="Add" ToolTipService.ToolTip="Add a new entry">
					<Button.Foreground>
						<ImageBrush ImageSource="icons/icons8-add-file-64.png" Stretch="Uniform"/>
					</Button.Foreground>
				</Button>
			</Viewbox>

			<Viewbox VerticalAlignment="Bottom">
				<Button x:Name="Edit" ToolTipService.ToolTip="Edit this entry">
					<Button.Foreground>
						<ImageBrush ImageSource="icons/icons8-edit-file-64.png" Stretch="Uniform"/>
					</Button.Foreground>
				</Button>
			</Viewbox>

			<Viewbox VerticalAlignment="Bottom">
				<Button x:Name="Remove" ToolTipService.ToolTip="Remove this entry">
					<Button.Foreground>
						<ImageBrush ImageSource="icons/icons8-delete-file-64.png" Stretch="Uniform"/>
					</Button.Foreground>
				</Button>
			</Viewbox>
				
		</UniformGrid>
	</Grid>
</Window>
