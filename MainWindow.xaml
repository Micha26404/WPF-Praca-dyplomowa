<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
		Loaded="Window_Loaded"
	    BorderThickness="0,0,1,2"
		Padding="6"
		ResizeMode="CanResizeWithGrip"
		Title="Rent-A-Movie" Width="1280" Height="800" >
	<Window.Background>
		<ImageBrush ImageSource="/backgrounds/wallpapersden.com_milky-way-starry-sky-landscape_2499x1406.jpg" Stretch="UniformToFill"/>
	</Window.Background>
	<Window.Resources>
		<Style TargetType="{x:Type Control}" x:Key="controlStyle">
			<Setter Property="FontSize" Value="16" />
		</Style>
		<Style TargetType="{x:Type Button}" BasedOn="{StaticResource controlStyle}">
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="MinWidth" Value="64"/>
			<Setter Property="MinHeight" Value="64"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type Button}">
						<Border Name="Border" CornerRadius="35" BorderThickness="1,1,1,1"
                            BorderBrush="black" Opacity="1">
							<Border.Background>
								<RadialGradientBrush SpreadMethod="Reflect">
									<GradientStop Color="Black"/>
									<GradientStop Color="#FF821515"/>
									<GradientStop Color="#FF6F0000"/>
									<GradientStop Color="Black"/>
									<GradientStop Color="#FF900000" Offset="0.627"/>
									<GradientStop Color="Black" Offset="0.644"/>
									<GradientStop Color="#FFA00000" Offset="0.983"/>
									<GradientStop Color="#FE000000" Offset="1"/>
								</RadialGradientBrush>
							</Border.Background>
							<Border.Effect>
								<DropShadowEffect Direction="270" ShadowDepth="7" Color="Black"/>
							</Border.Effect>
							<ContentPresenter/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="true">
								<Setter TargetName="Border" 
                                    Property="Background" Value="transparent"/>
							</Trigger>
							<Trigger Property="IsPressed" Value="true">
								<Setter TargetName="Border" 
                                    Property="Background" Value="red" />
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
		<Style TargetType="{x:Type Label}" BasedOn="{StaticResource controlStyle}"></Style>
		<Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource controlStyle}"></Style>
		<Style TargetType="{x:Type ListView}" BasedOn="{StaticResource controlStyle}"></Style>
		<Style TargetType="{x:Type ToolBar}" BasedOn="{StaticResource controlStyle}"></Style>
		<Style TargetType="{x:Type StatusBar}" BasedOn="{StaticResource controlStyle}"></Style>
		<Style TargetType="{x:Type ScrollViewer}" BasedOn="{StaticResource controlStyle}"></Style>
	</Window.Resources>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="64" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="64" />
		</Grid.ColumnDefinitions>
		<UniformGrid Columns="1">
			<UniformGrid.Background>
				<RadialGradientBrush SpreadMethod="Reflect">
					<GradientStop Color="Black" Offset="1"/>
					<GradientStop Color="#FF730000" Offset="0.884"/>
					<GradientStop Color="Black"/>
					<GradientStop Color="#FF821515"/>
					<GradientStop Color="#FF6F0000"/>
					<GradientStop Color="#00670000"/>
					<GradientStop Color="Black" Offset="0.878"/>
					<GradientStop Color="#FF730000" Offset="0.98"/>
				</RadialGradientBrush>
			</UniformGrid.Background>

			<Viewbox  VerticalAlignment="Top">
				<Button x:Name="Movies" ToolTipService.ToolTip="Movies" Click="Movies_Click">
					<Image Source="\icons\around-the-globe.png"/>
				</Button>
			</Viewbox>

			<Viewbox VerticalAlignment="Center">
				<Button x:Name="Rents" ToolTipService.ToolTip="Rents" Click="Rents_Click">
					<Image Source="icons/two-tickets.png"/>
				</Button>
			</Viewbox>

			<Viewbox VerticalAlignment="Bottom">
				<Button x:Name="Clients" ToolTipService.ToolTip="Clients" Click="Clients_Click">
					<Image Source="icons/street-view.png"/>
				</Button>
			</Viewbox>
		</UniformGrid>

		<DataGrid Name="dataGrid" Grid.Column="1" ItemsSource="{Binding}" FontSize="16" HeadersVisibility="Column" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" AlternationCount="2" BorderBrush="{x:Null}" Background="Transparent" HorizontalGridLinesBrush="#FF460000" VerticalGridLinesBrush="#FF420000">
			<DataGrid.AlternatingRowBackground>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="#00000000" Offset="0.423"/>
					<GradientStop Color="#FF3E0000" Offset="1"/>
					<GradientStop Color="#B2310000" Offset="0"/>
				</LinearGradientBrush>
			</DataGrid.AlternatingRowBackground>
			<DataGrid.RowBackground>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="#00000000" Offset="0.423"/>
					<GradientStop Color="#FF3E0000" Offset="1"/>
					<GradientStop Color="#B2310000" Offset="0"/>
				</LinearGradientBrush>
			</DataGrid.RowBackground>
			<DataGrid.Resources>
				<Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
					<Setter Property="Background" Value="#4C730000" />
					<Setter Property="Foreground" Value="white" />
				</Style>
			</DataGrid.Resources>
		</DataGrid>

		<UniformGrid Grid.Column="2" Width="64" Columns="1">
			<UniformGrid.Background>
				<RadialGradientBrush SpreadMethod="Reflect">
					<GradientStop Color="Black" Offset="1"/>
					<GradientStop Color="#FF730000" Offset="0.884"/>
					<GradientStop Color="Black"/>
					<GradientStop Color="#FF821515"/>
					<GradientStop Color="#FF6F0000"/>
					<GradientStop Color="#00670000"/>
					<GradientStop Color="Black" Offset="0.878"/>
					<GradientStop Color="#FF730000" Offset="0.98"/>
				</RadialGradientBrush>
			</UniformGrid.Background>

			<Viewbox  VerticalAlignment="Top">
				<Button x:Name="Trailer" ToolTipService.ToolTip="Trailer">
					<Image Source="icons/preview-pane.png" Stretch="Uniform"/>
				</Button>
			</Viewbox>

			<Viewbox VerticalAlignment="Top">
				<Button x:Name="Rent" ToolTipService.ToolTip="Rent">
					<Image Source="icons/starred-ticket.png" Stretch="Uniform"/>
				</Button>
			</Viewbox>

			<Viewbox VerticalAlignment="Top">
				<Button x:Name="Return" ToolTipService.ToolTip="Return">
					<Image Source="icons/circled-left-2.png" Stretch="Uniform"/>
				</Button>
			</Viewbox>

			<Viewbox VerticalAlignment="Bottom">
				<Button x:Name="Add" ToolTipService.ToolTip="Add">
					<Image Source="icons/add.png" Stretch="Uniform"/>
				</Button>
			</Viewbox>

			<Viewbox VerticalAlignment="Bottom">
				<Button x:Name="Edit" ToolTipService.ToolTip="Edit">
					<Image Source="icons/edit.png" Stretch="Uniform"/>
				</Button>
			</Viewbox>

			<Viewbox VerticalAlignment="Bottom">
				<Button x:Name="Remove" ToolTipService.ToolTip="Remove">
					<Image Source="icons/minus.png" Stretch="Uniform"/>
				</Button>
			</Viewbox>

		</UniformGrid>
	</Grid>
</Window>
