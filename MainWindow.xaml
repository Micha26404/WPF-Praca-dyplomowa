											<GradientStop Color="#FF6F0000" Offset="1"/>
											<GradientStop Color="#FF821515" Offset="1"/>
											<GradientStop Color="Black" Offset="1"/>
											<GradientStop Color="#FF730000" Offset="0"/>
										</RadialGradientBrush>
									</TextBox.Background>
								</TextBox>
							</UniformGrid>
							<UniformGrid Columns="1">
								<TextBlock MouseDown="FilterLeadActors">Lead actor</TextBlock>
								<TextBox Name="FilterLeadActors">
									<TextBox.Background>
										<RadialGradientBrush SpreadMethod="Reflect">
											<GradientStop Color="#00670000" Offset="1"/>
											<GradientStop Color="#FF6F0000" Offset="1"/>
											<GradientStop Color="#FF821515" Offset="1"/>
											<GradientStop Color="Black" Offset="1"/>
											<GradientStop Color="#FF730000" Offset="0"/>
										</RadialGradientBrush>
									</TextBox.Background>
								</TextBox>
							</UniformGrid>
							<UniformGrid Columns="1">
								<TextBlock MouseDown="FilterDirectors">Director</TextBlock>
								<TextBox Name="FilterDirector">
									<TextBox.Background>
										<RadialGradientBrush SpreadMethod="Reflect">
											<GradientStop Color="#00670000" Offset="1"/>
											<GradientStop Color="#FF6F0000" Offset="1"/>
											<GradientStop Color="#FF821515" Offset="1"/>
											<GradientStop Color="Black" Offset="1"/>
											<GradientStop Color="#FF730000" Offset="0"/>
										</RadialGradientBrush>
									</TextBox.Background>
								</TextBox>
							</UniformGrid>
							<UniformGrid Columns="1">
								<TextBlock MouseDown="FilterFormats">Formats</TextBlock>
								<TextBox Name="FilterFormats">
									<TextBox.Background>
										<RadialGradientBrush SpreadMethod="Reflect">
											<GradientStop Color="#00670000" Offset="1"/>
											<GradientStop Color="#FF6F0000" Offset="1"/>
											<GradientStop Color="#FF821515" Offset="1"/>
											<GradientStop Color="Black" Offset="1"/>
											<GradientStop Color="#FF730000" Offset="0"/>
										</RadialGradientBrush>
									</TextBox.Background>
								</TextBox>
							</UniformGrid>
							<UniformGrid Columns="1">
								<TextBlock MouseDown="FilterLanguages">Languages</TextBlock>
								<TextBox Name="FilterLanguages">
									<TextBox.Background>
										<RadialGradientBrush SpreadMethod="Reflect">
											<GradientStop Color="#00670000" Offset="1"/>
											<GradientStop Color="#FF6F0000" Offset="1"/>
											<GradientStop Color="#FF821515" Offset="1"/>
											<GradientStop Color="Black" Offset="1"/>
											<GradientStop Color="#FF730000" Offset="0"/>
										</RadialGradientBrush>
									</TextBox.Background>
								</TextBox>
							</UniformGrid>
							<UniformGrid Columns="1">
								<TextBlock MouseDown="FilterCountries">Countries</TextBlock>
