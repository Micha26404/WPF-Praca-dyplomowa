<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
		Loaded="Window_Loaded"
		Padding="6"
		Title="Perspective" Width="1280" Height="800" FontSize="16" Icon="/icons/showing-video-frames.png" UseLayoutRounding="False">
	<Window.Background>
		<ImageBrush ImageSource="/backgrounds/wallpapersden.com_milky-way-starry-sky-landscape_2499x1406.jpg" Stretch="UniformToFill"/>
	</Window.Background>
	<Window.Resources>
		<Style TargetType="RadioButton">
			<Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
			<Setter Property="VerticalContentAlignment" Value="Center"></Setter>
			<Setter Property="Foreground" Value="White"></Setter>
			<Setter Property="BorderBrush" Value="Transparent"></Setter>
			<Style.Triggers>
				<Trigger Property="IsChecked" Value="True">
					<Setter Property="BorderBrush" Value="Maroon"></Setter>
					<Setter Property="Background" Value="Maroon"></Setter>
				</Trigger>
			</Style.Triggers>
		</Style>
		<Style TargetType="{x:Type TabControl}">
			<Setter Property="BorderBrush" Value="Transparent"/>
		</Style>
		<Style TargetType="{x:Type TabItem}">
			<Setter Property="BorderBrush" Value="Transparent"></Setter>
			<Setter Property="Background">
				<Setter.Value>
					<RadialGradientBrush SpreadMethod="Reflect">
						<GradientStop Color="Black"/>
						<GradientStop Color="#FF821515"/>
						<GradientStop Color="#FF6F0000"/>
						<GradientStop Color="#00670000"/>
						<GradientStop Color="#FF730000" Offset="1"/>
					</RadialGradientBrush>
				</Setter.Value>
			</Setter>
			<Style.Triggers>
				<Trigger Property="IsSelected" Value="True">
					<Setter Property="BorderBrush" Value="Maroon"></Setter>
					<Setter Property="Background" Value="Maroon"></Setter>
				</Trigger>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="BorderBrush" Value="Maroon"></Setter>
					<Setter Property="Background" Value="Maroon"></Setter>
				</Trigger>
			</Style.Triggers>
		</Style>
		<Style TargetType="{x:Type TextBlock}">
			<Setter Property="TextAlignment" Value="Justify"></Setter>
			<Setter Property="Foreground" Value="White"></Setter>
			<Setter Property="Background">
				<Setter.Value>
					<RadialGradientBrush SpreadMethod="Reflect">
						<GradientStop Color="Black"/>
						<GradientStop Color="#FF821515"/>
						<GradientStop Color="#FF6F0000"/>
						<GradientStop Color="#00670000"/>
						<GradientStop Color="#FF730000" Offset="1"/>
					</RadialGradientBrush>
				</Setter.Value>
			</Setter>
		</Style>
		<Style TargetType="TextBox">
			<Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
			<Setter Property="VerticalContentAlignment" Value="Center"></Setter>
			<Setter Property="Foreground" Value="White"></Setter>
			<Setter Property="Background">
				<Setter.Value>
					<RadialGradientBrush SpreadMethod="Reflect">
						<GradientStop Color="Black"/>
						<GradientStop Color="#FF821515"/>
						<GradientStop Color="#FF6F0000"/>
						<GradientStop Color="#00670000"/>
						<GradientStop Color="#FF730000" Offset="1"/>
					</RadialGradientBrush>
				</Setter.Value>
			</Setter>
			<Setter Property="BorderBrush" Value="Transparent"></Setter>
			<Setter Property="SelectionBrush" Value="White"></Setter>
		</Style>
		<Style TargetType="ListBox">
			<Setter Property="Foreground" Value="White"></Setter>
			<Setter Property="Background" Value="maroon"></Setter>
			<Setter Property="BorderBrush" Value="Transparent"></Setter>
		</Style>
		<Style TargetType="{x:Type Button}">
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="MinWidth" Value="64"/>
			<Setter Property="MinHeight" Value="64"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type Button}">
						<Border Name="Border" CornerRadius="35" BorderBrush="Transparent" Opacity="1">
							<Border.Background>
								<RadialGradientBrush SpreadMethod="Reflect">
									<GradientStop Color="Black"/>
									<GradientStop Color="#FF821515"/>
									<GradientStop Color="#FF6F0000"/>
									<GradientStop Color="Black"/>
									<GradientStop Color="#FF900000" Offset="0.627"/>
									<GradientStop Color="Black" Offset="0.644"/>
									<GradientStop Color="#FFA00000" Offset="0.983"/>
									<GradientStop Color="#FE000000" Offset="1"/>
								</RadialGradientBrush>
							</Border.Background>
							<ContentPresenter/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="true">
								<Setter TargetName="Border" Property="Background" Value="Maroon"/>
							</Trigger>
							<Trigger Property="IsPressed" Value="true">
								<Setter TargetName="Border" Property="Width" Value="50" />
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</Window.Resources>

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="64" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="64" />
		</Grid.ColumnDefinitions>

		<UniformGrid Columns="1">
			<UniformGrid.Background>
				<RadialGradientBrush SpreadMethod="Reflect">
					<GradientStop Color="Black"/>
					<GradientStop Color="#FF821515"/>
					<GradientStop Color="#FF6F0000"/>
					<GradientStop Color="#00670000"/>
					<GradientStop Color="#FF730000" Offset="1"/>
				</RadialGradientBrush>
			</UniformGrid.Background>

			<Viewbox  VerticalAlignment="Top">
				<Button x:Name="Movies" ToolTipService.ToolTip="Movies" Click="Movies_Click">
					<Image Source="\icons\around-the-globe.png"/>
				</Button>
			</Viewbox>

			<Viewbox VerticalAlignment="Center">
				<Button x:Name="Rents" ToolTipService.ToolTip="Rents" Click="Orders_Click">
					<Image Source="icons/two-tickets.png"/>
				</Button>
			</Viewbox>

			<Viewbox VerticalAlignment="Bottom">
				<Button x:Name="Clients" ToolTipService.ToolTip="Clients" Click="Clients_Click">
					<Image Source="icons/street-view.png"/>
				</Button>
			</Viewbox>
		</UniformGrid>

		<UniformGrid Name="AddEdit" Grid.Column="1" VerticalAlignment="Center" Columns="6" Visibility="Hidden" Panel.ZIndex="5">
			<UniformGrid Grid.Column="2" Columns="1">
				<TextBox Background="#4C800000">Select action on submit</TextBox>
				<RadioButton GroupName="AddEdit" ToolTip="Add movie" Background="#4C800000">Add</RadioButton>
				<RadioButton GroupName="AddEdit" ToolTip="Edit movie" Background="#4C800000">Edit</RadioButton>
			</UniformGrid>
			<UniformGrid Columns="1" VerticalAlignment="Center">
				<TextBox InputScope="Number" ToolTip="Movie identification number" Background="#4C800000">Movie id</TextBox>
				<TextBox ToolTip="Movie title" Background="#4C800000">Title</TextBox>
				<TextBox InputScope="Number" ToolTip="Year of production" Background="#4C800000">Year of production</TextBox>
				<TextBox InputScope="Number" ToolTip="Movie duration in minutes" Background="#4C800000">Duration in minutes</TextBox>
				<TextBox InputScope="Number" ToolTip="Age restriction" Background="#4C800000">Age restriction</TextBox>
				<TextBox InputScope="Number" ToolTip="Rental price" Background="#4C800000">Rental price</TextBox>
				<TextBox InputScope="Number" ToolTip="All copies" Background="#4C800000">All copies</TextBox>
				<TextBox InputScope="Number" ToolTip="Remaining copies" Background="#4C800000">Remaining copies</TextBox>
				<ComboBox Name="CountrySelector" ToolTip="Country of origin" Background="#4C800000"></ComboBox>
				<ComboBox Name="DirectorSelector" ToolTip="Movie director" Background="#4C800000"></ComboBox>
				<ComboBox Name="Actor1Selector" ToolTip="Movie lead actor 1" Background="#4C800000"></ComboBox>
				<ComboBox Name="Actor2Selector" ToolTip="Movie lead actor 2" Background="#4C800000"></ComboBox>
			</UniformGrid>
			<ListBox SelectionMode="Multiple" Name="GenreSelector" ToolTip="Movie genre" Background="#4C800000" BorderBrush="Maroon">Action</ListBox>
			<ListBox SelectionMode="Multiple" Name="LangSelector" ToolTip="Languages available in this movie" Background="#4C800000" BorderBrush="Maroon">Languages</ListBox>
			<ListBox SelectionMode="Multiple" Name="FormatSelector" ToolTip="Available medium formats" Background="#4C800000" BorderBrush="Maroon">Medium format</ListBox>
			<TextBlock ToolTip="Movie plot premise" Background="#4C800000">Movie premise</TextBlock>
		</UniformGrid>

		<Viewbox Name="Poster"  Grid.Column="1" Visibility="Hidden" Stretch="Uniform" MouseLeftButtonDown="Poster_MouseLeftButtonDown" Panel.ZIndex="9">
			<Image Source="icons\add.png" ToolTip="Return to movies"/>
		</Viewbox>

		<StackPanel Grid.Column="1" Background="Transparent" Visibility="Hidden" Panel.ZIndex="10">
			<MediaElement Source="animations\activity.gif" Name="Media"
				LoadedBehavior="Manual" UnloadedBehavior="Stop" Stretch="Uniform" 
				MediaOpened="Element_MediaOpened" MediaEnded="Element_MediaEnded"/>

			<StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center">
				<StackPanel.Background>
					<RadialGradientBrush SpreadMethod="Reflect">
						<GradientStop Color="Black" Offset="1"/>
						<GradientStop Color="#FF730000" Offset="0.884"/>
						<GradientStop Color="Black"/>
						<GradientStop Color="#FF821515"/>
						<GradientStop Color="#FF6F0000"/>
						<GradientStop Color="#00670000"/>
						<GradientStop Color="Black" Offset="0.878"/>
						<GradientStop Color="#FF730000" Offset="0.98"/>
					</RadialGradientBrush>
				</StackPanel.Background>

				<TextBlock Foreground="White" VerticalAlignment="Center" Margin="5"  >Volume</TextBlock>
				<Slider Name="volumeSlider" VerticalAlignment="Center" ValueChanged="ChangeMediaVolume" 
				Minimum="0" Maximum="1" Value="0.5" MinWidth="64"/>

				<Viewbox MaxWidth="32" Margin="5" ToolTip="Play">
					<Button Click="OnMouseDownPlayMedia">
						<Image Source="icons\circled-play.png"/>
					</Button>
				</Viewbox>

				<Viewbox MaxWidth="32" Margin="5" ToolTip="Pause">
					<Button Click="OnMouseDownPauseMedia">
						<Image Source="icons\circled-pause.png"/>
					</Button>
				</Viewbox>

				<Viewbox MaxWidth="32" Margin="5" ToolTip="Beginning">
					<Button Click="OnMouseDownStopMedia">
						<Image Source="icons\stop-circled.png"/>
					</Button>
				</Viewbox>

				<TextBlock Foreground="White" Margin="5"  VerticalAlignment="Center">Position</TextBlock>
				<Slider Name="timelineSlider" Margin="5" ValueChanged="SeekToMediaPosition" VerticalAlignment="Center" MinWidth="300"/>
			</StackPanel>
		</StackPanel>

		<TabControl Grid.Column="1" Background="Transparent" TabStripPlacement="Left" Panel.ZIndex="1">

			<TabItem Width="64" MinHeight="256" ToolTip="Movies">
				<TabItem.Header>
					<Image Source="\icons\around-the-globe.png"/>
				</TabItem.Header>
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="auto"/>
						<RowDefinition Height="7*"/>
						<RowDefinition Height="45*"/>
					</Grid.RowDefinitions>

					<UniformGrid Name="MoviesFilters" Rows="1" Height="100" VerticalAlignment="Center">
						<UniformGrid Columns="1">
							<TextBox IsManipulationEnabled="False" MouseDoubleClick="FilterTitle_MouseDoubleClick">Title</TextBox>
							<TextBox Name="FilterTitle">filter</TextBox>
						</UniformGrid>
						<UniformGrid Columns="1">
							<TextBox IsManipulationEnabled="False" MouseDoubleClick="FilterYear_MouseDoubleClick">Year</TextBox>
							<TextBox Name="FilterYear">filter</TextBox>
						</UniformGrid>
						<UniformGrid Columns="1">
							<TextBox IsManipulationEnabled="False" MouseDoubleClick="Duration_MouseDoubleClick">Duration</TextBox>
							<TextBox Name="FilterDuration">filter</TextBox>
						</UniformGrid>
						<UniformGrid Columns="1">
							<TextBox IsManipulationEnabled="False" MouseDoubleClick="FilterAge_MouseDoubleClick">Age restriction</TextBox>
							<TextBox Name="FilterAge">filter</TextBox>
						</UniformGrid>
						<UniformGrid Columns="1">
							<TextBox IsManipulationEnabled="False" MouseDoubleClick="FilterPremise_MouseDoubleClick">Premise</TextBox>
							<TextBox Name="FilterPremise">filter</TextBox>
						</UniformGrid>
						<UniformGrid Columns="1">
							<TextBox IsManipulationEnabled="False" MouseDoubleClick="FilterPrice_MouseDoubleClick">Price</TextBox>
							<TextBox Name="FilterPrice">filter</TextBox>
						</UniformGrid>
						<UniformGrid Columns="1">
							<TextBox IsManipulationEnabled="False" MouseDoubleClick="FilterDirectors_MouseDoubleClick">Directors</TextBox>
							<TextBox Name="FilterDirectors">filter</TextBox>
						</UniformGrid>
						<UniformGrid Columns="1">
							<TextBox IsManipulationEnabled="False" MouseDoubleClick="FilterLeadActors_MouseDoubleClick">Lead actors</TextBox>
							<TextBox Name="FilterLeadActors">filter</TextBox>
						</UniformGrid>
						<UniformGrid Columns="1">
							<TextBox IsManipulationEnabled="False" MouseDoubleClick="FilterFormats_MouseDoubleClick">Formats</TextBox>
							<TextBox Name="FilterFormats">filter</TextBox>
						</UniformGrid>
						<UniformGrid Columns="1">
							<TextBox IsManipulationEnabled="False" MouseDoubleClick="FilterLanguages_MouseDoubleClick">Languages</TextBox>
							<TextBox Name="FilterLanguages">filter</TextBox>
						</UniformGrid>
						<UniformGrid Columns="1">
							<TextBox IsManipulationEnabled="False" MouseDoubleClick="FilterCountries_MouseDoubleClick">Countries</TextBox>
							<TextBox Name="FilterCountries">filter</TextBox>
						</UniformGrid>
						<UniformGrid Columns="1">
							<TextBox IsManipulationEnabled="False" MouseDoubleClick="FilterCopiesLeft_MouseDoubleClick">Copies left</TextBox>
							<TextBox Name="FilterCopiesLeft">filter</TextBox>
						</UniformGrid>
						<UniformGrid Columns="1">
							<TextBox IsManipulationEnabled="False" MouseDoubleClick="FilterCopiesTotal_MouseDoubleClick">Copies total</TextBox>
							<TextBox Name="FilterCopiesTotal">filter</TextBox>
						</UniformGrid>
					</UniformGrid>

					<DataGrid Name="MoviesCatalog" Grid.Row="1" ItemsSource="{Binding}" FontSize="16" Panel.ZIndex="1" HeadersVisibility="Column" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" AlternationCount="2" BorderBrush="{x:Null}" Background="Transparent" HorizontalGridLinesBrush="#FF460000" VerticalGridLinesBrush="#FF420000" Grid.RowSpan="2">
						<DataGrid.AlternatingRowBackground>
							<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
								<GradientStop Color="#00000000" Offset="0.423"/>
								<GradientStop Color="#FF3E0000" Offset="1"/>
								<GradientStop Color="#B2310000" Offset="0"/>
							</LinearGradientBrush>
						</DataGrid.AlternatingRowBackground>
						<DataGrid.RowBackground>
							<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
								<GradientStop Color="#00000000" Offset="0.423"/>
								<GradientStop Color="#FF3E0000" Offset="1"/>
								<GradientStop Color="#B2310000" Offset="0"/>
							</LinearGradientBrush>
						</DataGrid.RowBackground>
						<DataGrid.Resources>
							<Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
								<Setter Property="Background" Value="#4C730000" />
								<Setter Property="Foreground" Value="white" />
							</Style>
						</DataGrid.Resources>
					</DataGrid>
				</Grid>
			</TabItem>
			<TabItem Width="64" MinHeight="256" ToolTip="Clients" Foreground="White">
				<TabItem.Header>
					<Image Source="icons/two-tickets.png"/>
				</TabItem.Header>
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="auto"/>
						<RowDefinition Height="59*"/>
						<RowDefinition Height="110*"/>
					</Grid.RowDefinitions>

					<UniformGrid Name="ClientsFilters" Rows="1" Height="100" VerticalAlignment="Center">
						<UniformGrid Columns="1">
							<TextBox IsManipulationEnabled="False" MouseDoubleClick="FilterLastName_MouseDoubleClick">Title</TextBox>
							<TextBox Name="FilterLastName">filter</TextBox>
						</UniformGrid>
						<UniformGrid Columns="1">
							<TextBox IsManipulationEnabled="False" MouseDoubleClick="FilterFirstName_MouseDoubleClick">Year</TextBox>
							<TextBox Name="FilterFirstName">filter</TextBox>
						</UniformGrid>
						<UniformGrid Columns="1">
							<TextBox IsManipulationEnabled="False" MouseDoubleClick="FilterEmail_MouseDoubleClick">Duration</TextBox>
							<TextBox Name="FilterEmail">filter</TextBox>
						</UniformGrid>
						<UniformGrid Columns="1">
							<TextBox IsManipulationEnabled="False" MouseDoubleClick="FilterPhone_MouseDoubleClick">Age restriction</TextBox>
							<TextBox Name="FilterPhone">filter</TextBox>
						</UniformGrid>
					</UniformGrid>

					<DataGrid Name="ClientsCatalog" Grid.Row="1" ItemsSource="{Binding}" FontSize="16" Panel.ZIndex="1" HeadersVisibility="Column" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" AlternationCount="2" BorderBrush="{x:Null}" Background="Transparent" HorizontalGridLinesBrush="#FF460000" VerticalGridLinesBrush="#FF420000" Grid.RowSpan="2">
						<DataGrid.AlternatingRowBackground>
							<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
								<GradientStop Color="#00000000" Offset="0.423"/>
								<GradientStop Color="#FF3E0000" Offset="1"/>
								<GradientStop Color="#B2310000" Offset="0"/>
							</LinearGradientBrush>
						</DataGrid.AlternatingRowBackground>
						<DataGrid.RowBackground>
							<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
								<GradientStop Color="#00000000" Offset="0.423"/>
								<GradientStop Color="#FF3E0000" Offset="1"/>
								<GradientStop Color="#B2310000" Offset="0"/>
							</LinearGradientBrush>
						</DataGrid.RowBackground>
						<DataGrid.Resources>
							<Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
								<Setter Property="Background" Value="#4C730000" />
								<Setter Property="Foreground" Value="white" />
							</Style>
						</DataGrid.Resources>
					</DataGrid>
				</Grid>
			</TabItem>
			<TabItem Width="64" MinHeight="256" ToolTip="Orders" Foreground="White">
				<TabItem.Header>
					<Image Source="icons/street-view.png"/>
				</TabItem.Header>
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="auto"/>
						<RowDefinition/>
					</Grid.RowDefinitions>

					<UniformGrid Name="OrdersFilters" Rows="1" Height="100" VerticalAlignment="Top">
						<UniformGrid Columns="1">
							<TextBox IsManipulationEnabled="False" MouseDoubleClick="FilterLName_MouseDoubleClick">Title</TextBox>
							<TextBox Name="FilterLName">filter</TextBox>
						</UniformGrid>
						<UniformGrid Columns="1">
							<TextBox IsManipulationEnabled="False" MouseDoubleClick="FilterFName_MouseDoubleClick">Year</TextBox>
							<TextBox Name="FilterFName">filter</TextBox>
						</UniformGrid>
						<UniformGrid Columns="1">
							<TextBox IsManipulationEnabled="False" MouseDoubleClick="FilterDueDate_MouseDoubleClick">Duration</TextBox>
							<TextBox Name="FilterDueDate">filter</TextBox>
						</UniformGrid>
						<UniformGrid Columns="1">
							<TextBox IsManipulationEnabled="False" MouseDoubleClick="FilterReturnDate_MouseDoubleClick">Age restriction</TextBox>
							<TextBox Name="FilterReturnDate">filter</TextBox>
						</UniformGrid>
						<UniformGrid Columns="1">
							<TextBox IsManipulationEnabled="False" MouseDoubleClick="FilterRentDate_MouseDoubleClick">Age restriction</TextBox>
							<TextBox Name="FilterRentDate">filter</TextBox>
						</UniformGrid>
					</UniformGrid>

					<DataGrid Name="OrdersCatalog" Grid.Row="2" ItemsSource="{Binding}" FontSize="16" Panel.ZIndex="1" HeadersVisibility="Column" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" AlternationCount="2" BorderBrush="{x:Null}" Background="Transparent" HorizontalGridLinesBrush="#FF460000" VerticalGridLinesBrush="#FF420000">
						<DataGrid.AlternatingRowBackground>
							<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
								<GradientStop Color="#00000000" Offset="0.423"/>
								<GradientStop Color="#FF3E0000" Offset="1"/>
								<GradientStop Color="#B2310000" Offset="0"/>
							</LinearGradientBrush>
						</DataGrid.AlternatingRowBackground>
						<DataGrid.RowBackground>
							<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
								<GradientStop Color="#00000000" Offset="0.423"/>
								<GradientStop Color="#FF3E0000" Offset="1"/>
								<GradientStop Color="#B2310000" Offset="0"/>
							</LinearGradientBrush>
						</DataGrid.RowBackground>
						<DataGrid.Resources>
							<Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
								<Setter Property="Background" Value="#4C730000" />
								<Setter Property="Foreground" Value="white" />
							</Style>
						</DataGrid.Resources>
					</DataGrid>
				</Grid>
			</TabItem>
		</TabControl>

		<UniformGrid Grid.Column="4" Width="64" Columns="1">
			<UniformGrid.Background>
				<RadialGradientBrush SpreadMethod="Reflect">
					<GradientStop Color="Black"/>
					<GradientStop Color="#FF821515"/>
					<GradientStop Color="#FF6F0000"/>
					<GradientStop Color="#00670000"/>
					<GradientStop Color="#FF730000" Offset="1"/>
				</RadialGradientBrush>
			</UniformGrid.Background>

			<Viewbox  VerticalAlignment="Top">
				<Button x:Name="Trailer" ToolTipService.ToolTip="Trailer">
					<Image Source="icons/preview-pane.png" Stretch="Uniform"/>
				</Button>
			</Viewbox>

			<Viewbox VerticalAlignment="Top">
				<Button x:Name="Rent" ToolTipService.ToolTip="Rent">
					<Image Source="icons/starred-ticket.png" Stretch="Uniform"/>
				</Button>
			</Viewbox>

			<Viewbox VerticalAlignment="Top">
				<Button x:Name="Return" ToolTipService.ToolTip="Return">
					<Image Source="icons/circled-left-2.png" Stretch="Uniform"/>
				</Button>
			</Viewbox>

			<Viewbox VerticalAlignment="Bottom">
				<Button x:Name="Add" ToolTipService.ToolTip="Add">
					<Image Source="icons/add.png" Stretch="Uniform"/>
				</Button>
			</Viewbox>

			<Viewbox VerticalAlignment="Bottom">
				<Button x:Name="Edit" ToolTipService.ToolTip="Edit">
					<Image Source="icons/edit.png" Stretch="Uniform"/>
				</Button>
			</Viewbox>

			<Viewbox VerticalAlignment="Bottom">
				<Button x:Name="Delete" ToolTipService.ToolTip="Delete">
					<Image Source="icons/minus.png" Stretch="Uniform"/>
				</Button>
			</Viewbox>

		</UniformGrid>
	</Grid>
</Window>
