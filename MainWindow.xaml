
<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
		Background="PapayaWhip"
        Title="MainWindow" Width="900" Height="700">
	<Window.Resources>
		<Style TargetType="{x:Type Control}" x:Key="controlStyle">
			<Setter Property="FontSize" Value="18" />
		</Style>
		<Style TargetType="{x:Type Button}" BasedOn="{StaticResource controlStyle}"></Style>
		<Style TargetType="{x:Type Label}" BasedOn="{StaticResource controlStyle}"></Style>
		<Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource controlStyle}"></Style>
		<Style TargetType="{x:Type ListView}" BasedOn="{StaticResource controlStyle}"></Style>
		<Style TargetType="{x:Type Window}" x:Key="windowStyle">
			<Setter Property="FontSize" Value="18" />
		</Style>
		<Style TargetType="{x:Type TabControl}" BasedOn="{StaticResource controlStyle}"></Style>
		<Style TargetType="{x:Type DataGrid}" BasedOn="{StaticResource controlStyle}"></Style>
		<Style TargetType="{x:Type ToolBar}" BasedOn="{StaticResource controlStyle}"></Style>
		<Style TargetType="{x:Type StatusBar}" BasedOn="{StaticResource controlStyle}"></Style>
		<Style TargetType="{x:Type local:MainWindow}" BasedOn="{StaticResource controlStyle}"></Style>
	</Window.Resources>
