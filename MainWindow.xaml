<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
		Loaded="Window_Loaded"
	    BorderThickness="0,0,1,2"
		Padding="6"
		ResizeMode="CanResizeWithGrip"
		Title="Rent-A-Movie" Width="1280" Height="800" >
	<Window.Background>
		<RadialGradientBrush>
			<GradientStop Color="#FF380404" Offset="1"/>
			<GradientStop Color="#FF581010" Offset="0.918"/>
			<GradientStop Color="Black"/>
			<GradientStop Color="Black" Offset="0.139"/>
			<GradientStop Color="#FF821515"/>
			<GradientStop Color="#FF6F0000"/>
			<GradientStop Color="Black" Offset="0.386"/>
			<GradientStop Color="#FF710000"/>
			<GradientStop Color="#FF920000"/>
			<GradientStop Color="#FF290505" Offset="0.291"/>
			<GradientStop Color="#FF7F2121"/>
			<GradientStop Color="#FF5A0F0F" Offset="0.168"/>
			<GradientStop Color="#FF620000" Offset="0.327"/>
			<GradientStop Color="#FF651313" Offset="0.811"/>
			<GradientStop Color="#FF5D1414" Offset="0.447"/>
			<GradientStop Color="#FF1F0505" Offset="0.574"/>
			<GradientStop Color="#FF541111" Offset="0.622"/>
			<GradientStop Color="#FF370707" Offset="0.778"/>
			<GradientStop Color="#FE000000" Offset="0.896"/>
		</RadialGradientBrush>
	</Window.Background>
	<Window.Resources>
		<Style TargetType="{x:Type Control}" x:Key="controlStyle">
			<Setter Property="FontSize" Value="16" />
		</Style>
		<Style TargetType="{x:Type Button}" BasedOn="{StaticResource controlStyle}">
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="OverridesDefaultStyle" Value="false"/>
			<Setter Property="MinHeight" Value="64"/>
			<Setter Property="MinWidth" Value="64"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type Button}">
						<Border Name="Border" CornerRadius="35" BorderThickness="1,1,1,1"
                            BorderBrush="black" Opacity="0.8">
							<Border.Background>
								<RadialGradientBrush>
									<GradientStop Color="Black"/>
									<GradientStop Color="#FF821515"/>
									<GradientStop Color="#FF6F0000"/>
									<GradientStop Color="#FF710000"/>
									<GradientStop Color="White" Offset="1"/>
									<GradientStop Color="#FF920000" Offset="0.943"/>
								</RadialGradientBrush>
							</Border.Background>
							<Border.Effect>
								<DropShadowEffect Direction="270" ShadowDepth="7" Color="Black"/>
							</Border.Effect>
							<ContentPresenter/>

						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="true">
								<Setter TargetName="Border" 
                                    Property="Background" Value="white"/>
							</Trigger>
							<Trigger Property="IsPressed" Value="true">
								<Setter TargetName="Border" 
                                    Property="Background" Value="lightgreen" />
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
		<Style TargetType="{x:Type Label}" BasedOn="{StaticResource controlStyle}"></Style>
		<Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource controlStyle}"></Style>
		<Style TargetType="{x:Type ListView}" BasedOn="{StaticResource controlStyle}"></Style>
		<Style TargetType="{x:Type ToolBar}" BasedOn="{StaticResource controlStyle}"></Style>
		<Style TargetType="{x:Type StatusBar}" BasedOn="{StaticResource controlStyle}"></Style>
		<Style TargetType="{x:Type ScrollViewer}" BasedOn="{StaticResource controlStyle}"></Style>
	</Window.Resources>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="10*" />
			<ColumnDefinition Width="80*" />
			<ColumnDefinition Width="10*" />
		</Grid.ColumnDefinitions>
		<UniformGrid Columns="1">
			<UniformGrid.Background>
				<RadialGradientBrush Opacity="0.75">
					<GradientStop Color="#FF251515" Offset="1"/>
					<GradientStop Color="Black"/>
					<GradientStop Color="#FF6D1A1A" Offset="0.952"/>
					<GradientStop Color="Black" Offset="1"/>
				</RadialGradientBrush>
			</UniformGrid.Background>

			<Button x:Name="Movies" ToolTipService.ToolTip="Browse movies" MaxHeight="64" VerticalAlignment="Top">
				<Button.Foreground>
					<ImageBrush Stretch="Uniform" ImageSource="/icons/icons8-movies-folder-64.png"/>
				</Button.Foreground>
			</Button>

			<Button x:Name="Rents" ToolTipService.ToolTip="Browse rents" MaxHeight="64" VerticalAlignment="Center">
				<Button.Foreground>
					<ImageBrush Stretch="Uniform" ImageSource="icons/icons8-combi-ticket-64.png"/>
				</Button.Foreground>
			</Button>

			<Button x:Name="Clients" ToolTipService.ToolTip="Browse clients" MaxHeight="64" VerticalAlignment="Bottom">
				<Button.Foreground>
					<ImageBrush Stretch="Uniform" ImageSource="icons/Planet People.png"/>
				</Button.Foreground>
			</Button>
		</UniformGrid>

		<DataGrid Name="dTable" Grid.Column="1" d:ItemsSource="{Binding}" FontSize="16" HeadersVisibility="Column" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" AlternationCount="2" BorderBrush="#FF868686" Background="{x:Null}"/>

		<UniformGrid Grid.Column="2" MinWidth="30" Columns="1">
			<UniformGrid.Background>
				<RadialGradientBrush Opacity="0.7">
					<GradientStop Color="#FF251515" Offset="1"/>
					<GradientStop Color="Black"/>
					<GradientStop Color="#FF6D1A1A" Offset="0.952"/>
					<GradientStop Color="Black" Offset="1"/>
				</RadialGradientBrush>
			</UniformGrid.Background>
			<Button x:Name="Trailer" ToolTipService.ToolTip="Watch a trailer for this movie" MaxHeight="64" VerticalAlignment="Top" Panel.ZIndex="-1">
				<Button.Foreground>
					<ImageBrush ImageSource="icons/icons8-movie-projector-64.png" Stretch="Uniform"/>
				</Button.Foreground>
			</Button>

			<Button x:Name="Rent" ToolTipService.ToolTip="Rent a copy of this movie" MaxHeight="64" VerticalAlignment="Top">
				<Button.Foreground>
					<ImageBrush ImageSource="icons/icons8-movie-ticket-64.png" Stretch="Uniform"/>
				</Button.Foreground>
			</Button>

			<Button x:Name="Return" ToolTipService.ToolTip="Return a copy of this movie" MaxHeight="64" VerticalAlignment="Top">
				<Button.Foreground>
					<ImageBrush ImageSource="icons/icons8-return-64.png" Stretch="Uniform"/>
				</Button.Foreground>
			</Button>

			<Button x:Name="Add" ToolTipService.ToolTip="Add a new entry" MaxHeight="64" VerticalAlignment="Bottom">
				<Button.Foreground>
					<ImageBrush ImageSource="icons/icons8-add-file-64.png" Stretch="Uniform"/>
				</Button.Foreground>
			</Button>

			<Button x:Name="Edit" ToolTipService.ToolTip="Edit this entry" MaxHeight="64" VerticalAlignment="Bottom">
				<Button.Foreground>
					<ImageBrush ImageSource="icons/icons8-edit-file-64.png" Stretch="Uniform"/>
				</Button.Foreground>
			</Button>

			<Button x:Name="Remove" ToolTipService.ToolTip="Remove this entry" MaxHeight="64" VerticalAlignment="Bottom">
				<Button.Foreground>
					<ImageBrush ImageSource="icons/icons8-delete-file-64.png" Stretch="Uniform"/>
				</Button.Foreground>
			</Button>
		</UniformGrid>
	</Grid>
</Window>
