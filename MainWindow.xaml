<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
		Loaded="Window_Loaded"
        Title="Movie Rental Software" Width="600" Height="600" Background="Black">
    <Window.Resources>
        <Style TargetType="{x:Type Control}" x:Key="controlStyle">
            <Setter Property="FontSize" Value="16" />
        </Style>
        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource controlStyle}"></Style>
        <Style TargetType="{x:Type Label}" BasedOn="{StaticResource controlStyle}"></Style>
        <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource controlStyle}"></Style>
        <Style TargetType="{x:Type ListView}" BasedOn="{StaticResource controlStyle}"></Style>
        <Style TargetType="{x:Type ToolBar}" BasedOn="{StaticResource controlStyle}"></Style>
        <Style TargetType="{x:Type StatusBar}" BasedOn="{StaticResource controlStyle}"></Style>
        <Style TargetType="{x:Type ScrollViewer}" BasedOn="{StaticResource controlStyle}"></Style>
    </Window.Resources>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="backgrounds/Earth-From-Space-Space-1080x1920.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="20*" />
                </Grid.RowDefinitions>
		
            <UniformGrid Grid.Row="0" MinHeight="60" Rows="1" VerticalAlignment="Top">
                
                <Button x:Name="Movies" Cursor="Hand" BorderBrush="{x:Null}" Padding="1,1,1,0" ToolTipService.ToolTip="Movies" Foreground="{x:Null}">
                    <Button.Background>
                        <ImageBrush ImageSource="icons/Movie 3D Popcorn Drink.png" Stretch="Uniform"/>
                    </Button.Background>
                </Button>

                <Button x:Name="Rents" Cursor="Hand" BorderBrush="{x:Null}" ToolTipService.ToolTip="Rents">
                    <Button.Background>
                        <ImageBrush Stretch="Uniform" ImageSource="icons/Ticket heart.png" TileMode="None"/>
                    </Button.Background>
                </Button>
                <Button x:Name="Clients" Cursor="Hand" BorderBrush="{x:Null}" ToolTipService.ToolTip="Clients">
                    <Button.Background>
                        <ImageBrush Stretch="Uniform" ImageSource="icons/Planet People.png"/>
                    </Button.Background>
                </Button>
            </UniformGrid>
		
		    <Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="30*" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>

			    <DataGrid Name="Table" Grid.Column="1" d:ItemsSource="{d:SampleData ItemCount=10}" RowBackground="#7F75C9EE" AlternatingRowBackground="#7FED7184" FontSize="16" HeadersVisibility="Column" Background="{x:Null}" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"/>

			<UniformGrid Grid.Column="0" Background="#6BE94E65" MinWidth="30" Columns="1">
				<Button x:Name="Add" Cursor="Hand" BorderBrush="{x:Null}" Padding="1,1,1,0" ToolTipService.ToolTip="Movies" Foreground="{x:Null}">
					<Button.Background>
						<ImageBrush ImageSource="icons/Movie 3D Popcorn Drink.png" Stretch="Uniform"/>
					</Button.Background>
				</Button>
				<Button x:Name="Edit" Cursor="Hand" BorderBrush="{x:Null}" Padding="1,1,1,0" ToolTipService.ToolTip="Movies" Foreground="{x:Null}">
					<Button.Background>
						<ImageBrush ImageSource="icons/Movie 3D Popcorn Drink.png" Stretch="Uniform"/>
					</Button.Background>
				</Button>
				<Button x:Name="Remove" Cursor="Hand" BorderBrush="{x:Null}" Padding="1,1,1,0" ToolTipService.ToolTip="Movies" Foreground="{x:Null}">
					<Button.Background>
						<ImageBrush ImageSource="icons/Movie 3D Popcorn Drink.png" Stretch="Uniform"/>
					</Button.Background>
				</Button>
			</UniformGrid>

			<UniformGrid Grid.Column="2" Background="#6675C9EE" MinWidth="30" Columns="1">
                    <Button x:Name="Trailer" Cursor="Hand" BorderBrush="{x:Null}" Padding="1,1,1,0" ToolTipService.ToolTip="Movies" Foreground="{x:Null}">
                        <Button.Background>
                            <ImageBrush ImageSource="icons/Movie 3D Popcorn Drink.png" Stretch="Uniform"/>
                        </Button.Background>
                    </Button>
                    <Button x:Name="Rent" Cursor="Hand" BorderBrush="{x:Null}" Padding="1,1,1,0" ToolTipService.ToolTip="Movies" Foreground="{x:Null}">
                        <Button.Background>
                            <ImageBrush ImageSource="icons/Movie 3D Popcorn Drink.png" Stretch="Uniform"/>
                        </Button.Background>
                    </Button>
                    <Button x:Name="Return" Cursor="Hand" BorderBrush="{x:Null}" Padding="1,1,1,0" ToolTipService.ToolTip="Movies" Foreground="{x:Null}">
                        <Button.Background>
                            <ImageBrush ImageSource="icons/Movie 3D Popcorn Drink.png" Stretch="Uniform"/>
                        </Button.Background>
                    </Button>
                </UniformGrid>
			</Grid>
		</Grid>
	</Grid>
</Window>
